<%= render partial: "shared/appBar" %>
<div id="sectors" class="page-container" >
  <p style="color: green"><%= notice %></p>
  <h1>Setores</h1>
  <%# @sectors.each do |sector| %>
    <%#= render sector %>
    <%# <p> %>
    <%#= link_to "Show this sector", sector %>
    <%# </p> %>
    <%# end %>
    <div class="d-flex flex-row-reverse">
      <%= link_to "Novo Setor", new_sector_path , class:"btn btn-primary" %>
    </div>
    <div class="round-card">
      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Nome</th>
            <th scope="col">Unidade</th>
            <th scope="col">Opções</th>
          </tr>
        </thead>
        <tbody>
          <% @sectors.each do |sector| %>
            <tr>
              <td scope="row"> <%= sector.id %></td>
              <td> <%= sector.name %></td>
              <td> <%= "#{sector.division.name}" %></td>
              <td><%= link_to "Edit", sector %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%#= link_to "New sector", new_sector_path %>
