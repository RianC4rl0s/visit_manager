<%= render partial: "shared/appBar" %>
<div class="page-container">
  <p style="color: green"><%= notice %></p>
  <h1>Funcionários</h1>
  <div class="d-flex flex-row-reverse ">
    <%= link_to "Novo Funcionario", new_employee_path, class:"btn btn-primary" %>
  </div>
  <div id="employees">
    <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Nome</th>
          <th scope="col">Cpf</th>
          <th scope="col">Telefone</th>
          <th scope="col">Setor</th>
          <th scope="col">Opções</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <%#= render employee %>
          <tr>
            <td scope="row"> <%= employee.id %></td>
            <td> <%= employee.name %></td>
            <td> <%= employee.cpf %></td>
            <td> <%= employee.phone %></td>
            <td> <%= employee.sector.name %></td>
            <td>
              <p>
                <%= link_to "+", employee , class:"btn btn-primary"%>
              </p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
