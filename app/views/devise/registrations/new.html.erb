<div class="center-items full-space bg-dark text-light" data-bs-theme="dark">
  <div class="login-card ">
  
    <h2 class="text-center text-warning">Visit Manager</h2>
    <h4>Sign up</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"full-width" %>
      </div>
      <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name, autofocus: true,class:"full-width" %>
      </div>
      <%# <div class="field"> %>
      <%#= f.label :role %>
      <%# <br/> %>
      <%#= f.select :role, User.roles.keys %>
      <%# </div> %>
      <div class="field">
        <%= f.label :role %><br/>
        <%= f.select :role, ['att', 'adm', 'emp'] %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class:"full-width" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"full-width" %>
      </div>
      <br/>
      <br/>
      <div class="d-flex justify-content-end flex-row ">
          <%= render "devise/shared/links" %>
        <div class="actions">
          <%= f.submit "Sign up",class:"btn btn-warning" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
